<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginViewController">
   <children>
      <ImageView fitHeight="404.0" fitWidth="615.0" layoutX="-3.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/loging_background.jpg" />
         </image></ImageView>
      <Rectangle arcHeight="75.0" arcWidth="75.0" fill="WHITE" height="282.0" layoutX="139.0" layoutY="64.0" opacity="0.55" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="326.0" />
      <Label layoutX="261.0" layoutY="87.0" text="Login">
         <font>
            <Font name="System Bold" size="31.0" />
         </font>
      </Label>
      <TextField fx:id="txtEmailOrPhoneNumber" layoutX="159.0" layoutY="159.0" prefHeight="26.0" prefWidth="285.0" promptText="email or student ID" />
      <PasswordField fx:id="txtPassword" layoutX="157.0" layoutY="204.0" prefHeight="26.0" prefWidth="286.0" promptText="password" />
      <Button layoutX="250.0" layoutY="246.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="26.0" prefWidth="98.0" style="-fx-background-color: white;" text="Login" />
      <Label layoutX="200.0" layoutY="291.0" prefHeight="19.0" prefWidth="147.0" text="Don't have an account?">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="btnRegisterOnAction" layoutX="329.0" layoutY="285.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Register">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
